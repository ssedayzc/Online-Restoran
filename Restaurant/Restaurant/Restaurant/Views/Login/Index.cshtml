@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Dinosoft | Online Sipariş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-19/css/style.css">

    <style>
        body {
            background-color: white;
            
            background-image: url('../../Image/food-background.jpg'); /* Desenli fotoğraf yolunu belirtin */
            background-repeat: repeat; /* Desenin tekrar etmesini sağlar */
        }

        .login-wrap {
            background-color: #d9534f;
            border: 1px solid #e0e0e0;
        }

        .form-control {
            background-color: #f5f5f5;
            border: 1px solid #e0e0e0;
            color: #333;
        }

            .form-control::placeholder {
                color: #888;
            }

        .btn-primary {
            background-color: #d9534f;
            border: 1px solid #d9534f;
        }

            .btn-primary:hover {
                background-color: #c9302c;
                border: 1px solid #c9302c;
            }

        .text {
            color: #333;
        }

        a {
            color: #d9534f;
        }

            a:hover {
                color: #c9302c;
            }
    </style>

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <h2 class="heading-section">Dinosoft Online Sipariş</h2>
                        
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Welcome</h3>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="AdminUserName" placeholder="Kullanıcı adı" style="background-color: #d9534f; color: black;" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="Şifre" style="background-color: #d9534f; color: black;" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi unuttum</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">
                            <a href="#">Ana Sayfaya Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/main.js"></script>

</body>
</html>
